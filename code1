#include<bits/stdc++.h>
using namespace std;
int main(void)
{
    int n=4;
    //pattern in increasing order from 1 to n
    for(int i=1;i<=n;i++)
    {
      for(int j=1;j<=i;j++)
      {
        cout<<" ";
      }
      for(int j=i;j<=n;j++)
      {
        cout<<j<<" ";
      }
      cout<<endl;
    }
    // pattern in decreasing order from n-1 to 1
    for(int i=n-1;i>0;i--)
    {
      for(int j=1;j<=i;j++)
      {
        cout<<" ";
      }
      for(int j=i;j<=n;j++)
      {
        cout<<j<<" ";
      }
      cout<<endl;
    }
}
